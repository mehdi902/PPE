{% extends "base.html.twig" %}
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Se connecter {% endblock %}       

{% block contenu %} 

    {% if form.valide is defined %}
        {% if form.valide == true %}

            <h1 class="h3 mb-3 font-weight-normal">Connexion r√©ussie</h1>

        {% else %}

            <h1 class="h3 mb-3 font-weight-normal">Erreur : {{form.message}}</h1>
            <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=connexion">Retourner sur la page de connexion</a></h1>

        {% endif %}
    {% else %}

        <form class="form-signin" action="index.php?page=connexion" method="post" enctype="application/x-www-form-urlencoded" style="max-width: 100%;max-height: 50%;">

                <label for="inputEmail" class="sr-only" >Email:</label>
                <input type="email" id="inputEmail" name="inputEmail" class="form-control mx-auto" style="max-width: 80%;max-height: 50%; margin-bottom: 1%" placeholder="Email" required autofocus>      
                <label for="inputPassword" class="sr-only">Mot de passe:</label>      
                <input type="password" id="inputPassword" name="inputPassword" class="form-control mx-auto" style="max-width: 80%;max-height: 50%; " placeholder="Mot de passe" required>

                <div class="card-footer mx-auto" style="max-width: 100%; margin-top: 2%">
                    <button class="btn btn-lg btn-primary btn-block mx-auto" style="max-width: 40%;max-height: 50%; margin-bottom: 0.5% " type="submit" name="btConnecter">Se connecter</button> 
                    <div class="list-group" style='max-width: 7.5%;max-height: 5%;margin-left: 1%; margin-top: 1%'>
                        <a href="index.php?page=inscription" class="list-group-item list-group-item-action active mx-auto"> S'inscrire </a>
                    </div>
                </div>


             </form>
    {% endif %}

    
    
    
  
             
  

{% endblock %}



