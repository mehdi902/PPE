{% block title %} {{ parent() }} Validation email {% endblock %}

{% block contenu %} 
    
    {% if form.validemodif == True %}
        
         <div>
                    <div class="alert alert-success alert-dismissible fade show mx-auto mx-lg-auto mx-md-auto" role="alert">
                        <strong> Email valid√©, <a href="index.php?page=index" class="text-success stretched-link">revenir au menu</a></strong> 
