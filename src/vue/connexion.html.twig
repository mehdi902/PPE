{% extends "base.html.twig" %}
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Se connecter {% endblock %}       

{% block contenu %} 
    
    <div class="card mx-auto" style="width: 80%; height:100%; margin-top: 2%">
        <div class="card-header ">
            <h2 class="mx-auto" style="width: 15%">Connectez-vous sur Site de vente</h2>
        </div>       
        
        
        
            <div class="card-body mx-auto">



                 <form class="form-signin" action="index.php?page=connexion" method="post" enctype="application/x-www-form-urlencoded">     
                     <label for="inputEmail" class="sr-only">Email:</label>
                     <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email" required autofocus>      
                     <label for="inputPassword" class="sr-only">Mot de passe:</label>      
                     <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Mot de passe" required>
                     <button class="btn btn-lg btn-primary btn-block" type="submit" name="btConnecter">Se connecter</button> 
                     <a href="index.php?page=inscrire">S'inscrire</a>
                 </form>


            </div>
    </div>
    
  
{% endblock %}

