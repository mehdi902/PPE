{% extends 'base.html.twig' %}
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Utilisateurs {% endblock %} 
{% block contenu %}

    
    
    
        {% if form.supressionuser is defined %}
            {% if form.supressionuser == true %}
            
                <div class="container-fluid" style="margin-top: 2em">
                    <div class="alert alert-success alert-dismissible fade show mx-auto mx-lg-auto"  role="alert">
                        <strong> {{ form.messagesupressionutilisateur }}</strong>
                    
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>                 
    
                    </div>
                </div>    
                
                
            {% else %}
            
                <div class="container-fluid" style="margin-top: 2em">
                    <div class="alert alert-danger alert-dismissible fade show mx-auto mx-lg-auto" role="alert">
                        <strong> {{ form.messagesupressionutilisateur }}</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                             <span aria-hidden="true">&times;</span>
                        </button>                 
    
                    </div>     
                    
                    
        {% endif %}
    {% endif %}
                

         <div class="card-body mx-auto" style="width: 70%; height: 70%">
            <div class="panel panel-default"> 

            <div class="table-responsive border"> 
                <table class="table table-hover border-bottom">
                    <tr>
                        <td class='container-fluid'>
                            <h3><strong>Utilisateurs</strong></h3>
                        </td>
                        <td></td>
                        <td></td>
                    </tr>

                    {% for u in liste %}

                        <tr>
                            
                            <td>
                                <h4>
                                    <strong>{{ u.email }} </strong>
                                </h4>
                            </td>

                                   <td>
                                <button type="button" class="btn btn-default btn-lg">
                                    <a href="index.php?page=utilisateur-modif&email={{u.email}}" >
                                    <i class="fas fa-edit"></i>
                                    Modifier</button>
                            </td>
                            
                            <td>
                                    <button type="button" class="btn btn-default btn-lg">
                                    <a href="index.php?page=utilisateur&email={{u.email}}" >
                                    <i class="fas fa-trash"></i>
                                    Supprimer</button>
                                    
                            </td>
                        </tr> 

                    {% endfor %}    
                </table>
                
                {% set nb = form.nbpages %}
            
               <nav aria-label="Page navigation example">
                    <ul class="pagination">
                      <li class="page-item">
                        <a class="page-link" href="index.php?page=utilisateur&nopage={{ 0 }}" aria-label="Previous">
                          <span aria-hidden="true">&laquo;</span>
                          <span class="sr-only">Previous</span>
                        </a>
                      </li>
                      
                       {% for i in 1..nb %}
                      <li class="page-item"><a class="page-link"  href="index.php?page=utilisateur&nopage={{ i-1 }}">{{ i }}</a></li>
                        {% endfor %}
                       
                      <li class="page-item">
                        <a class="page-link" href="index.php?page=utilisateur&nopage={{ nb-1 }}" aria-label="next">
                          <span aria-hidden="true">&raquo;</span>
                          <span class="sr-only">Next</span>
                        </a>
                      </li>
                    </ul>
               </nav>                 
                
                
            </div>
        </div>    
    </div>  
  
  
  
  {% endblock %}